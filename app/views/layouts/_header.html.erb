<header>
  <nav>
    <%= link_to image_tag("logo.png"), root_path %>
    <ul class="left">
      <li>
        <%= nav_link_to "Released", movies_path %>
      </li>
      <li>
        <%= nav_link_to "Upcoming", filtered_movies_url(:upcoming) %>
      </li>
      <li>
        <%= nav_link_to "Recent", filtered_movies_url(:recent) %>
      </li>
      <li>
        <%= nav_link_to "Hits", filtered_movies_url(:hits) %>
      </li>
      <li>
        <%= nav_link_to "Flops", filtered_movies_url(:flops) %>
      </li>
    </ul>
    <ul class="right">
      <% if current_user %>
        <li>
          <%= link_to current_user.name, current_user %>
        </li>
        <li>
          <%= link_to 'Account Settings', edit_user_path(current_user) %>
        </li>
        <li>
          <%= button_to 'Sign Out', signout_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign In", signin_path, class: "button" %>
        </li>
        <li>
          <%= link_to "Sign Up", signup_path, class: "button" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
